.index__container            
  section#news__container.news__container
    h2.section__title Najnovšie aktuality
    {% for news in site.categories.news  %}
    .itemContainer(class="{{.news.class}}")
      img.news__image(src= "../assets/img/{{news.imgIndex}}" alt="{{news.alt}}")      
      a.news__contentContainer(href= "{{news.url}}")
        h3.news__itemTitle {{ news.title }} 
        h4.news_itemDate {{ news.date | date: "%d/%m/%Y"}}
        p.news__itemContent {{ news.excerpt_separator }} 
      ul.news__tags
        {% for tag in news.tags %}
        li
          a.news__tag(href="../{{ tag }}") {{ tag | replace:'-',' ' }}
        {% endfor %}
    {% endfor %}  



    
